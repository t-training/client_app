<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

<h2><%= "#{@microposts_hash["user_name"]}ã®post" %></h2>
<ol id = "microposts">
	<% @microposts_hash["microposts"].each do |list| %>
		<li>
			<span class = "gravatar"><%= image_tag @microposts_hash["icon_url"] %></span>
			<span class = "user"><%= @microposts_hash["user_name"] %></span>
			<span class = "content"><%= list["content"] %></span>
			<span class = "timestamp"><%= list["created_at"] %></span>
		</li>
	<% end %>
</ol>